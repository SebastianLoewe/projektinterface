var x = 10;
var y = 10;
var xspeed = 7;
var yspeed = 10;

function setup() {
  createCanvas(400, 400);
}

function draw() {

  background(220);
  bewegeDich();
  zeichneDich();
  pralleAb();

}

function bewegeDich() {
  x = x + xspeed;
  y = y + yspeed;
}

function zeichneDich() {
  circle(x, y, 40);
}

function pralleAb() {
  if ((x >= width) || (x <= 0)) {
    xspeed = xspeed * -1;
  } else if ((y >= height) || (y <= 0)) {
    yspeed = yspeed * -1;
  }
}
