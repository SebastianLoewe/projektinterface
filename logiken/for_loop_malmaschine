function setup() {
  createCanvas(800, 600);
  background(190);
}

function draw() {
  noCursor();
}

function mouseDragged() {

 for (let zaehler = 0; zaehler < 10; zaehler+=1) {
   
    let x = random(mouseX-30,mouseX+20);
    let y = random(mouseY-20,mouseY+30);
    let d = random(50, 60);

    let r = random(250);
    let g = random(250);
    let b = random(250);
   
    fill(r, g, b, 100);
    noStroke();
   
    circle(x, y, d);
  
  }
  
}
