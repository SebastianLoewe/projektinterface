let r = 0;
let g = 0;
let b = 0;

function setup() {
  createCanvas(400, 400);
}

function draw() {
  background(200);
  noCursor();
  line(width / 2, 0, width / 2, height);
  circle(mouseX, mouseY, 20);

  if (mouseX > width / 2) {
  r++; //oder r = r + 1;
  fill(r, g, b);
  } 
  else {
  g++; //oder r = r + 1;
  fill(r, g, b);  
  }  
  
}
