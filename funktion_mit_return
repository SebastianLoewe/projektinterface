function setup() {
  createCanvas(800, 400);
}

function draw() {
  stroke(0);
  noCursor();
  var m = distance(width/2, height/2, mouseX, mouseY);
  fill(m * 3, m * 2, m);
  circle(mouseX, mouseY, m / 2);
}

function distance(x1, y1, x2, y2) {
  var dx = x1 - x2;
  var dy = y1 - y2;
  var d = sqrt(dx * dx + dy * dy);
  return d;
}
