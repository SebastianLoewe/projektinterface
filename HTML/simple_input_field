let myFont;
let output;
let inp;

function setup() {
  createCanvas(400, 400);
  myFont = loadFont('/fonts/item.ttf');
  inp = createInput('â€¦');
  inp.position(410, 0);
  inp.input(myInputEvent);
}

function myInputEvent() {
  output = inp.value();
}

function draw() {
  background(100);
  fill('skyblue');
  textFont(myFont);
  textSize(60);
  text(output, 10, mouseY, 100, 200);
}
